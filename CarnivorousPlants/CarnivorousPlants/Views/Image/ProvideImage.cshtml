@using CarnivorousPlants.Models.ImageViewModel
@model ProvideImageViewModel

@{
    ViewData["Title"] = "ProvideImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Provide Image to <b>@Model.ProjectName</b></h2>

<form asp-controller="Image" asp-action="ProvideImage" asp-route-projectId="@Model.ProjectId" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group" hidden>
        <label asp-for="ProjectId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ProjectId" class="form-control" readonly="readonly" />
            <span asp-validation-for="ProjectId" class="text-danger"></span>
        </div>
    </div>

    <input type="file" name="image" />
    <br />
    <br />

    <div>
        <div>
            <b>@Html.DisplayNameFor(model => model.TagId)</b>
            <select asp-for="TagId" class="form-control" asp-items="@Model.TagsSelectList">
                <option selected value="">--- SELECT ---</option>
            </select>
        </div>
    </div>
    <hr />

    <hr />
    <input class="btn btn-primary btn-block" type="submit" value="Send" />
    <a class="btn btn-outline-primary btn-block" asp-controller="Home" asp-action="Index">Back</a>
</form>


