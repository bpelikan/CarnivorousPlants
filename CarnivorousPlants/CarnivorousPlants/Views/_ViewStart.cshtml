@{
    Layout = "_Layout";
}

@if (@TempData["Error"] != null)
{
    <div class="alert alert-danger" id="danger-alert">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        @*@TempData["Error"]
            <br />*@
        @Html.Raw(TempData["Error"])
    </div>
}

